<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">
<GridLayout
    android:layout_width="match_parent"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:background="#fff"
    android:rowCount="3">
    <TextView android:text="Amount"
        android:padding="16dp"
        />
    <EditText android:hint="0.0"
        android:layout_width="match_parent"
        android:background="#eeeeee"
        android:padding="16dp"
        android:inputType="numberDecimal"
        android:layout_margin="2dp"
        android:id="@+id/etAmount"

        />
    <TextView android:text="Month"
        android:padding="16dp"

        />
    <EditText android:hint="0.0"
        android:layout_width="match_parent"
        android:background="#eeeeee"
        android:padding="16dp"
        android:layout_margin="2dp"
        android:id="@+id/etMonth"
        android:inputType="numberDecimal"


        /> <TextView android:text="Per Month"
    android:padding="16dp"

    />
    <EditText android:hint="0.0"
        android:layout_width="match_parent"
        android:background="#eeeeee"
        android:padding="16dp"
        android:inputType="numberDecimal"
        android:enabled="false"
        android:layout_margin="2dp"
        android:id="@+id/etPerMonth"

        />
</GridLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reason For Advance :"
        android:padding="16dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="200"
        android:layout_marginLeft="16dp"
        android:background="#eeeeee"
        android:layout_marginRight="16dp"
        android:padding="16dp"
        android:id="@+id/etMsgReason"/>
    <include layout="@layout/footer_button" android:id="@+id/footer"/>

</LinearLayout>