<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/background"
    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer_view"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/action"
                    android:padding="16dp"
                    android:onClick="exitScreen"
                    android:src="@drawable/ic_cancel_white_24dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apply for leave"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:id="@+id/tvHead"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"

                >





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:padding="4dp"
                        android:textSize="12dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Submit Date"/>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_margin="4dp"
                        app:contentPadding="4dp"
                        app:cardElevation="8dp"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/date_range"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/tv_date"
                                android:gravity="center_vertical"
                                android:paddingLeft="16dp"
                                android:layout_weight="1"
                                android:textColor="@color/colorPrimary"
                                android:text="12-Dec-2017"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:padding="4dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Leave From"/>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            android:layout_margin="4dp"
                            app:contentPadding="4dp"
                            app:cardElevation="8dp"

                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/date_range"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/tv_leave_from"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="16dp"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorPrimary"
                                    android:text="12-Dec-2017"/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:padding="4dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Leave To"/>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            android:layout_margin="4dp"
                            app:contentPadding="4dp"
                            app:cardElevation="8dp"

                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/date_range"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/tv_leave_to"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="16dp"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorPrimary"
                                    android:text="12-Dec-2017"/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>


                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:padding="4dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Type of leave*"/>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            android:layout_margin="4dp"
                            app:contentPadding="4dp"
                            app:cardElevation="8dp"

                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/type"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/tv_type"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="16dp"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorPrimary"
                                    android:text="Paid"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/dropdown"
                                    android:layout_gravity="center_vertical"/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:padding="4dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorPrimary"
                            android:text="No. of days*"/>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            android:layout_margin="4dp"
                            app:contentPadding="4dp"
                            app:cardElevation="8dp"

                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/no_of_leave"/>
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/et_nod"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="16dp"
                                    android:textSize="14dp"
                                    android:background="#fff"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorPrimary"
                                    android:text="2"/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"

                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:padding="4dp"
                        android:textSize="12dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Reason of leave*"/>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_margin="4dp"
                        app:contentPadding="4dp"
                        app:cardElevation="8dp"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:orientation="horizontal">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/et_rol"
                                android:gravity="center_vertical"
                                android:paddingLeft="16dp"
                                android:layout_weight="1"
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="14dp"
                                android:lines="5"
                                android:layout_gravity="start"

                                android:background="#fff"
                                android:text="Reason for leave"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>


                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/footer_view"
        android:layout_alignParentBottom="true"

        >
        <include layout="@layout/footer_button"
            android:id="@+id/footer"/>
    </LinearLayout>
</RelativeLayout>


